<h2>products#index</h2>

<% @this_users_products.each do |x| %>
    
<strong><%= link_to "#{x.id}. #{x.title}", user_product_path(x.user_id, x.id) %></strong>
    <br><%= x.description %>
    <br>User ID: <%= x.user_id %>
    <br>Created at:<%= x.created_at.to_formatted_s(:short) %>
<br>Deadline: <%= x.deadline_calc.to_formatted_s(:short) %>
    
<p><%= button_to "Delete", user_product_path(x.user_id, x.id), method: :delete, data: {confirm: "Are you sure you want to delete this product?"}%></p>

    <p>* * *</p>
<% end %>

 
<p><%= button_to "Add new product", new_user_product_path(@this_user.id), method: :get %></p>